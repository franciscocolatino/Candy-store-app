<div class="container py-5">
  <div class="row justify-content-center">
    <div class="col-lg-10">
      <div class="card shadow-sm border-0">
        <div class="card-header bg-white py-3">
          <div class="d-flex justify-content-between align-items-center">
            <h1 class="h4 mb-0 text-primary">
              <i class="fas fa-box-open me-2"></i><%= @product.name %>
            </h1>
            <div class="btn-group">
              <%= link_to edit_product_path(@product), class: 'btn btn-outline-primary btn-sm' do %>
                <i class="fas fa-edit me-1"></i> Editar
              <% end %>
              <%= link_to products_path, class: 'btn btn-outline-secondary btn-sm' do %>
                <i class="fas fa-arrow-left me-1"></i> Voltar
              <% end %>
            </div>
          </div>
        </div>
        
        <div class="card-body">
          <div class="row">
            <div class="col-md-6">
              <div class="mb-4">
                <h5 class="text-muted mb-3">Informações do Produto</h5>
                <div class="mb-3">
                  <span class="badge bg-info text-dark mb-2"><%= @product.category %></span>
                  <p class="lead"><%= @product.description %></p>
                </div>
                <div class="d-flex align-items-center mb-3">
                  <span class="h3 text-primary mb-0"><%= number_to_currency(@product.price) %></span>
                </div>
              </div>
              
              <div class="mb-4">
                <h5 class="text-muted mb-3">Detalhes do Estoque</h5>
                <div class="card bg-light">
                  <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center mb-3">
                      <div>
                        <h6 class="mb-0">Estoque Total</h6>
                        <span class="h4"><%= @product.lots.sum(:quantity) %></span> unidades
                      </div>
                      <%= link_to inventory_product_path(@product), class: 'btn btn-primary' do %>
                        <i class="fas fa-boxes me-1"></i> Gerenciar Estoque
                      <% end %>
                    </div>
                    
                    <% if @product.lots.any? %>
                      <div class="mb-3">
                        <h6 class="small text-uppercase text-muted mb-2">Últimos Lotes</h6>
                        <div class="list-group">
                          <% @product.lots.order(created_at: :desc).limit(3).each do |lot| %>
                            <div class="list-group-item list-group-item-action">
                              <div class="d-flex w-100 justify-content-between">
                                <h6 class="mb-1"><%= lot.quantity %> unidades</h6>
                                <small class="text-muted">
                                  <%= l(lot.created_at, format: :short) if lot.created_at %>
                                </small>
                              </div>
                              <div class="d-flex small text-muted">
                                <span class="me-3">
                                  <i class="fas fa-industry me-1"></i> 
                                  <%= l(lot.manufacturing_date, format: :short) if lot.manufacturing_date %>
                                </span>
                                <span>
                                  <i class="fas fa-calendar-check me-1"></i> 
                                  <%= l(lot.expiration_date, format: :short) if lot.expiration_date %>
                                </span>
                              </div>
                            </div>
                          <% end %>
                        </div>
                      </div>
                    <% else %>
                      <div class="alert alert-warning mb-0">
                        <i class="fas fa-exclamation-triangle me-2"></i>
                        Nenhum lote cadastrado para este produto.
                      </div>
                    <% end %>
                  </div>
                </div>
              </div>
            </div>
            
            <div class="col-md-6">
              <div class="card h-100 border-0 bg-light">
                <div class="card-body d-flex align-items-center justify-content-center">
                  <div class="text-center">
                    <i class="fas fa-box-open fa-5x text-muted mb-3"></i>
                    <p class="text-muted mb-0">Imagem do produto</p>
                    <small class="text-muted">Área para upload de imagem</small>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
        
        <div class="card-footer bg-white border-top py-3">
          <div class="d-flex justify-content-between align-items-center text-muted small">
            <div>
              <i class="far fa-calendar-plus me-1"></i>
              Criado em: <%= l(@product.created_at, format: :long) if @product.created_at %>
            </div>
            <div>
              <i class="far fa-edit me-1"></i>
              Atualizado em: <%= l(@product.updated_at, format: :long) if @product.updated_at %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
