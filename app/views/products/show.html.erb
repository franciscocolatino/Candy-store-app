            <div>
              <p class="text-sm text-gray-500 mb-1">Estoque Total</p>
              <div class="text-xl font-semibold text-gray-800"><%= @product.lots.sum(:quantity) %> unidades</div>
            </div>
              <% if @current_user.is_admin? %>  
                <%= link_to "Gerenciar", product_lots_path(@product), class: 'bg-indigo-600 text-white text-sm px-4 py-2 rounded hover:bg-indigo-700 transition' %>
