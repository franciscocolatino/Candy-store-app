<div class="max-w-7xl mx-auto py-10 px-4">
  <div class="bg-white shadow-xl rounded-2xl overflow-hidden">
    <!-- CabeÃ§alho -->
    <div class="px-6 py-5 border-b border-gray-200 flex justify-between items-center">
      <h1 class="text-xl font-semibold text-indigo-600 flex items-center">
        <i class="fas fa-box-open mr-2 text-gray-500"></i> <%= @product.name %>
      </h1>
      <div class="flex space-x-2">
        <%= link_to edit_product_path(@product), class: 'text-sm px-4 py-2 border border-indigo-500 text-indigo-600 rounded hover:bg-indigo-50 transition', title: 'Editar produto' do %>
          <i class="fas fa-edit mr-1"></i> Editar
        <% end %>
        <%= link_to products_path, class: 'text-sm px-4 py-2 border border-gray-400 text-gray-700 rounded hover:bg-gray-100 transition', title: 'Voltar para a lista de produtos' do %>
          <i class="fas fa-arrow-left mr-1"></i> Voltar
        <% end %>
      </div>
    </div>

    <!-- ConteÃºdo principal -->
    <div class="px-6 py-8 grid grid-cols-1 md:grid-cols-2 gap-8">
      <!-- InformaÃ§Ãµes do Produto -->
      <div>
        <h2 class="text-gray-600 text-lg mb-3">ðŸ“‹ InformaÃ§Ãµes do Produto</h2>
        <span class="inline-block bg-blue-100 text-blue-800 text-sm px-3 py-1 rounded-full mb-4"><%= @product.category %></span>
        <p class="text-gray-800 text-base mb-6"><%= @product.description %></p>

        <div class="mb-6">
          <h3 class="text-gray-500 text-sm">ðŸ’° PreÃ§o</h3>
          <div class="text-3xl font-bold text-green-600 mt-1"><%= number_to_currency(@product.price) %></div>
        </div>

        <hr class="border-t border-gray-200 my-6">

        <!-- Estoque -->
        <h2 class="text-gray-600 text-lg mb-3">ðŸ“¦ Detalhes do Estoque</h2>
        <div class="bg-gray-50 p-4 rounded-lg shadow">
          <div class="flex justify-between items-center mb-4">
            <div>
              <p class="text-sm text-gray-500 mb-1">Estoque Total</p>
              <div class="text-xl font-semibold text-gray-800"><%= @product.lots.sum(:quantity) %> unidades</div>
            </div>
            <%= link_to inventory_product_path(@product), class: 'bg-indigo-600 text-white text-sm px-4 py-2 rounded hover:bg-indigo-700 transition' do %>
              <i class="fas fa-boxes mr-1"></i> Gerenciar
            <% end %>
          </div>

          <% if @product.lots.any? %>
            <p class="text-xs uppercase text-gray-400 mb-2">Lotes disponÃ­veis</p>
            <ul class="space-y-4">
             
            </ul>
          <% else %>
            <div class="bg-yellow-100 text-yellow-800 text-sm p-4 rounded flex items-center mt-4">
              <i class="fas fa-exclamation-triangle mr-2 text-yellow-500"></i> Nenhum lote cadastrado para este produto.
            </div>
          <% end %>
        </div>
      </div>

      <!-- Imagem -->
      <div class="flex items-center justify-center">
        <div class="border border-gray-200 bg-white rounded-lg shadow w-full flex flex-col items-center justify-center py-16">
          <i class="fas fa-image fa-5x text-gray-300 mb-4"></i>
          <p class="text-sm text-gray-500">Imagem do produto</p>
          <span class="text-xs text-gray-400">Funcionalidade futura de upload</span>
        </div>
      </div>
    </div>

    <!-- RodapÃ© -->
    <div class="bg-gray-50 border-t border-gray-200 px-6 py-4 text-sm text-gray-500 flex justify-between">
      <div>
        <i class="far fa-calendar-plus mr-1 text-indigo-500"></i> Criado em: <%= l(@product.created_at, format: :long) %>
      </div>
      <div>
        <i class="far fa-edit mr-1 text-green-500"></i> Atualizado em: <%= l(@product.updated_at, format: :long) %>
      </div>
    </div>
  </div>
</div>
