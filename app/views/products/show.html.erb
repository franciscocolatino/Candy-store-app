<div class="container py-5">
  <div class="row justify-content-center">
    <div class="col-lg-10">
      <div class="card shadow rounded-4 border-0">
        <div class="card-header bg-white py-4 border-bottom">
          <div class="d-flex justify-content-between align-items-center">
            <h1 class="h4 mb-0 text-primary">
              <i class="fas fa-box-open me-2"></i><%= @product.name %>
            </h1>
            <div class="btn-group">
              <%= link_to edit_product_path(@product), class: 'btn btn-sm btn-outline-primary', title: 'Editar produto', data: { bs_toggle: 'tooltip' } do %>
                <i class="fas fa-edit me-1"></i> Editar
              <% end %>
              <%= link_to products_path, class: 'btn btn-sm btn-outline-secondary', title: 'Voltar para a lista de produtos', data: { bs_toggle: 'tooltip' } do %>
                <i class="fas fa-arrow-left me-1"></i> Voltar
              <% end %>
            </div>
          </div>
        </div>

        <div class="card-body">
          <div class="row">
            <!-- Coluna Informa√ß√µes -->
            <div class="col-md-6 mb-4">
              <h5 class="text-muted mb-3">üìã Informa√ß√µes do Produto</h5>
              <span class="badge bg-info text-dark mb-2"><%= @product.category %></span>
              <p class="lead"><%= @product.description %></p>

              <div class="mt-3">
                <h6 class="text-muted">üí∞ Pre√ßo</h6>
                <span class="display-6 text-success"><%= number_to_currency(@product.price) %></span>
              </div>

              <hr class="my-4">

              <h5 class="text-muted mb-3">üì¶ Detalhes do Estoque</h5>
              <div class="bg-light p-3 rounded shadow-sm">
                <div class="d-flex justify-content-between align-items-center mb-3">
                  <div>
                    <h6 class="mb-1">Estoque Total</h6>
                    <span class="h4"><%= @product.lots.sum(:quantity) %></span> unidades
                  </div>
                  <%= link_to inventory_product_path(@product), class: 'btn btn-sm btn-primary' do %>
                    <i class="fas fa-boxes me-1"></i> Gerenciar
                  <% end %>
                </div>

                <% if @product.lots.any? %>
                  <h6 class="text-uppercase text-muted small mb-2">√öltimos Lotes</h6>
                  <div class="list-group list-group-flush">
                    <% @product.lots.order(created_at: :desc).limit(3).each do |lot| %>
                      <div class="list-group-item d-flex flex-column">
                        <div class="d-flex justify-content-between">
                          <strong><%= lot.quantity %> unidades</strong>
                          <small class="text-muted"><%= l(lot.created_at, format: :short) %></small>
                        </div>
                        <div class="d-flex small text-muted mt-1">
                          <span class="me-3">
                            <i class="fas fa-industry me-1"></i>
                            Fabrica√ß√£o: <%= l(lot.manufacturing_date, format: :short) if lot.manufacturing_date %>
                          </span>
                          <span>
                            <i class="fas fa-calendar-check me-1"></i>
                            Validade: <%= l(lot.expiration_date, format: :short) if lot.expiration_date %>
                          </span>
                        </div>
                      </div>
                    <% end %>
                  </div>
                <% else %>
                  <div class="alert alert-warning mt-3">
                    <i class="fas fa-exclamation-triangle me-2"></i>
                    Nenhum lote cadastrado para este produto.
                  </div>
                <% end %>
              </div>
            </div>

            <!-- Coluna Imagem -->
            <div class="col-md-6 d-flex align-items-stretch">
              <div class="card w-100 bg-light border-0 shadow-sm">
                <div class="card-body d-flex flex-column justify-content-center align-items-center text-center">
                  <i class="fas fa-box-open fa-5x text-muted mb-3"></i>
                  <p class="text-muted mb-1">Imagem do produto</p>
                  <small class="text-muted">√Årea para upload futura</small>
                </div>
              </div>
            </div>
          </div>
        </div>

        <!-- Rodap√© -->
        <div class="card-footer bg-white border-top py-3">
          <div class="d-flex justify-content-between small text-muted">
            <div>
              <i class="far fa-calendar-plus me-1"></i>
              Criado em: <%= l(@product.created_at, format: :long) %>
            </div>
            <div>
              <i class="far fa-edit me-1"></i>
              Atualizado em: <%= l(@product.updated_at, format: :long) %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
