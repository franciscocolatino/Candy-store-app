<h1 class="text-2xl font-bold mb-4 text-gray-800">Lista de Produtos</h1>

<% if @products.any? %>
  <ul class="space-y-3">
    <% @products.each do |product| %>
      <li class="bg-white shadow-md rounded-lg p-4 hover:shadow-lg transition-shadow duration-200">
        <%= link_to product.name, product_path(product), class: "text-blue-600 hover:underline text-lg font-medium" %>
      </li>
    <% end %>
  </ul>
<% else %>
  <div class="p-4 bg-yellow-100 text-yellow-800 rounded-md">
    <p>Nenhum produto cadastrado.</p>
  </div>
<% end %>
