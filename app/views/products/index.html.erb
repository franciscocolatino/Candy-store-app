<div class="max-w-5xl mx-auto px-4 py-8">
  <div class="flex justify-between items-center mb-6">
    <h1 class="text-4xl font-bold text-gray-900">Lista de Produtos</h1>
    <%= link_to  "Novo Produto", new_product_path, class: "inline-flex items-center px-5 py-2.5 rounded-xl text-sm font-semibold text-white bg-[#c2410c] text-white text-sm font-medium rounded-md hover:bg-[#9a3412] transition"%> 
  </div>

  <% if @products.any? %>
    <ul class="grid gap-4 sm:grid-cols-2 lg:grid-cols-3">
      <% @products.each do |product| %>
        <li>
          <%= link_to product_path(product), class: "bg-white rounded-xl shadow hover:shadow-lg transition duration-200 p-5 flex flex-col justify-between h-full block hover:scale-105 transition" do %>
          <div class="mb-3">
            <h2 class="text-lg font-semibold text-gray-700 mb-1 hover:text-[#c2410c] transition">
              <%= product.name %>
            </h2>
            <% if product.category.present? %>
              <span class="inline-block bg-red-100 text-red-800 text-xs px-2 py-1 rounded">
                <%= product.category %>
              </span>
            <% end %>
          </div>

          <div class="mt-auto flex justify-between items-center text-sm text-gray-500">
            <span><i class="fas fa-boxes mr-1"></i> <%= product.lots.sum(:quantity) %> unidades</span>
            <span class="font-medium text-red-600"><%= number_to_currency(product.price, unit: "R$", separator: ",", delimiter: ".", format: "%u %n") %></span>
          </div>
        <% end %>
      </li>
      <% end %>
    </ul>
  <% else %>
    <div class="bg-yellow-100 border-l-4 border-yellow-500 text-yellow-800 p-4 rounded-md">
      <p class="font-medium">Nenhum produto cadastrado.</p>
    </div>
  <% end %>
</div>
