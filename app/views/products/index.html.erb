<div class="max-w-5xl mx-auto px-4 py-8">
  <div class="flex justify-between items-center mb-6">
    <h1 class="text-2xl font-bold text-gray-800">ðŸ“¦ Lista de Produtos</h1>
    <%= link_to new_product_path, class: "inline-flex items-center px-4 py-2 bg-indigo-600 text-white text-sm font-medium rounded-md hover:bg-indigo-700 transition" do %>
      <i class="fas fa-plus mr-2"></i> Novo Produto
    <% end %>
  </div>

  <% if @products.any? %>
    <ul class="grid gap-4 sm:grid-cols-2 lg:grid-cols-3">
      <% @products.each do |product| %>
        <li class="bg-white rounded-xl shadow hover:shadow-lg transition duration-200 p-5 flex flex-col justify-between h-full">
          <div class="mb-3">
            <h2 class="text-lg font-semibold text-gray-700 mb-1">
              <%= link_to product.name, product_path(product), class: "hover:text-indigo-600 transition" %>
            </h2>
            <% if product.category.present? %>
              <span class="inline-block bg-blue-100 text-blue-800 text-xs px-2 py-1 rounded">
                <%= product.category %>
              </span>
            <% end %>
          </div>

          <div class="mt-auto flex justify-between items-center text-sm text-gray-500">
            <span><i class="fas fa-boxes mr-1"></i> <%= product.lots.sum(:quantity) %> unidades</span>
            <span class="font-medium text-green-600"><%= number_to_currency(product.price) %></span>
          </div>
        </li>
      <% end %>
    </ul>
  <% else %>
    <div class="bg-yellow-100 border-l-4 border-yellow-500 text-yellow-800 p-4 rounded-md">
      <p class="font-medium">Nenhum produto cadastrado.</p>
    </div>
  <% end %>
</div>
