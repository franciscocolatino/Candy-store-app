<div class="max-w-4xl mx-auto px-4 py-8">
  <div class="bg-white rounded-xl shadow-lg overflow-hidden">
    <!-- Cabeçalho -->
    <div class="bg-indigo-600 px-6 py-4">
      <div class="flex justify-between items-center">
        <h1 class="text-2xl font-bold text-white">Comprovante do Pedido #<%= @order.id %></h1>
        <div class="bg-white text-indigo-600 px-3 py-1 rounded-full text-sm font-semibold">
          <%= @order.is_finished ? 'Finalizado' : 'Em andamento' %>
        </div>
      </div>
      <div class="mt-2 text-indigo-100">
        Mesa: <span class="font-medium"><%= @order.table.number %></span>
        <span class="mx-2">•</span>
        Data: <span class="font-medium"><%= l(@order.created_at, format: :long) %></span>
      </div>
    </div>

    <!-- Itens do Pedido -->
    <div class="p-6">
      <h2 class="text-lg font-semibold text-gray-800 mb-4 pb-2 border-b">Itens do Pedido</h2>
      
      <div class="space-y-4 mb-6">
        <div>
          <%= link_to avaliable_lots_path(order_id: @order.id),
              class: 'text-sm px-4 py-2 border border-indigo-500 text-indigo-600 rounded hover:bg-indigo-50 transition',
              title: 'Adicionar Produto' do %>
            <i class="fas fa-edit mr-1"></i> Adicionar Produto
          <% end %>
        </div>
        <% @order_lots.each do |order_lot| %>
          <div class="flex justify-between items-center py-3 border-b border-gray-100">
            <div>
              <h3 class="font-medium text-gray-800"><%= order_lot.lot.product.name %></h3>
              <p class="text-sm text-gray-500">
                <%= order_lot.quantity %> × R$ <%= number_to_currency(order_lot.lot.product.price, unit: '', separator: ',', delimiter: '.') %>
                <span class="mx-2">•</span>
                <%= order_lot.is_delivered ? '✅ Entregue' : '⏳ Pendente' %>
              </p>
            </div>
            <div class="text-right flex gap-6 items-center">
              <div>
                <p class="font-medium">
                  R$ <%= number_to_currency(order_lot.quantity * order_lot.lot.product.price, unit: '', separator: ',', delimiter: '.') %>
                </p>
              </div>

              <div>
                <%= button_to order_lot_delivered_order_orders_lot_path(@order, order_lot),
                    method: :post,
                    form_class: "inline",
                    class: "text-sm px-4 py-2 border border-indigo-500 text-indigo-600 rounded hover:bg-red-50 transition" do %>
                  <i class="fas fa-trash-alt mr-1"></i> Status
                <% end %>
              </div>

              <div>
                <%= button_to order_orders_lot_path(@order, order_lot),
                    method: :delete,
                    form_class: "inline",
                    class: "text-sm px-4 py-2 border border-red-500 text-red-600 rounded hover:bg-red-50 transition",
                    data: { confirm: "Tem certeza que deseja remover este item?" } do %>
                  <i class="fas fa-trash-alt mr-1"></i> Remover
                  <% end %>
              </div>
            </div>
          </div>
        <% end %>
      </div>

      <!-- Total -->
      <div class="bg-gray-50 p-4 rounded-lg">
        <div class="flex justify-between items-center">
          <span class="font-semibold text-gray-700">Total:</span>
          <span class="text-xl font-bold text-gray-900">R$ <%= number_to_currency(@total, unit: '', separator: ',', delimiter: '.') %></span>
        </div>
      </div>

      <!-- Ações -->
      <div class="mt-8 pt-6 border-t border-gray-200 flex justify-between">
        <%= link_to 'Voltar para a Mesa', table_path(@order.table), class: 'px-4 py-2 border border-gray-300 rounded-md text-gray-700 hover:bg-gray-50' %>
        
        <div class="text-right flex gap-6 items-center" >
          <% unless @order.is_finished %>
            <%= button_to 'Fechar Pedido', close_order_order_path(@order),
                method: :post,
                class: 'px-4 py-2 bg-green-600 text-white rounded-md hover:bg-red-700',
                data: { confirm: 'Tem certeza que deseja fechar este pedido? Esta ação não pode ser desfeita.' } %>
          <% end %>
          
          <%= button_to 'Cancelar Pedido', order_path(@order),
              method: :delete,
              class: 'px-4 py-2 bg-red-600 text-white rounded-md hover:bg-red-700',
              data: { confirm: 'Tem certeza que deseja fechar este pedido? Esta ação não pode ser desfeita.' } %>
        </div>
      </div>
    </div>
  </div>
</div>
