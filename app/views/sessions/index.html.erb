<div class="max-w-2xl mx-auto px-4 py-8">
  <div class="max-w-md mx-auto">
    <h1 class="text-3xl font-bold text-center mb-8">Login</h1>

    <% if flash[:alert] %>
      <div class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded relative mt-3">
        <%= flash[:alert] %>
      </div>
    <% end %>
    
    <%= form_with url: login_path, method: :post, data: { turbo: true },class: "space-y-6" do |form| %>
      <div>
        <%= form.label :cpf, "CPF", class: "block text-sm font-medium text-gray-700" %>
        <%= form.text_field :cpf, required: true, autofocus: true, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm" %>
      </div>

      <div>
        <%= form.label :password_digest, "Senha", class: "block text-sm font-medium text-gray-700" %>
        <%= form.password_field :password_digest, required: true, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm" %>
      </div>

      <div class="flex justify-center">
        <%= form.submit "Login", class: "inline-flex justify-center py-2 px-4 border border-transparent shadow-sm text-sm font-medium rounded-md text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500" %>
      </div>
    <% end %>

    <div class="text-center mt-6">
      <%= link_to "Cadastrar", new_user_path, class: "text-indigo-600 hover:text-indigo-900" %>
    </div>
  </div>
</div>
