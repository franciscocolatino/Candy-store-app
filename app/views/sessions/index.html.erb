<div class="min-h-screen flex items-center justify-center bg-gray-50 px-4 py-12">
  <div class="max-w-md w-full bg-white p-10 rounded-2xl shadow-2xl">
    <h1 class="text-4xl font-bold text-center mb-8 text-gray-900">Acessar sua Conta</h1>

    <% if flash[:alert] %>
      <div class="flex items-center gap-2 bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded-lg mb-6">
        <svg class="w-5 h-5 text-red-600" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" d="M12 9v2m0 4h.01M4.93 4.93l14.14 14.14M21 21L3 3" />
        </svg>
        <span><%= flash[:alert] %></span>
      </div>
    <% end %>

    <% if flash[:notice] %>
      <div class="flex items-center gap-2 bg-green-100 border border-green-400 text-green-700 px-4 py-3 rounded-lg mb-6">
        <svg class="w-5 h-5 text-green-600" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" d="M5 13l4 4L19 7" />
        </svg>
        <span><%= flash[:notice] %></span>
      </div>
    <% end %>

    <%= form_with url: login_path, method: :post, data: { turbo: true }, class: "space-y-6" do |form| %>
      <div>
        <%= form.label :cpf, "CPF", class: "block text-base font-medium text-gray-700 mb-1" %>
        <%= form.text_field :cpf,
              required: true,
              autofocus: true,
              class: "block w-full px-4 py-3 rounded-xl border border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-2 focus:ring-indigo-500 focus:outline-none text-base transition", 
              placeholder: "Digite seu CPF (apenas números)"  
                %>
      </div>

      <div>
        <%= form.label :password, "Senha", class: "block text-base font-medium text-gray-700 mb-1" %>
        <%= form.password_field :password,
              required: true,
              class: "block w-full px-4 py-3 rounded-xl border border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-2 focus:ring-indigo-500 focus:outline-none text-base transition", 
              placeholder: "Digite sua senha" %>
      </div>

      <div class="flex justify-center pt-2">
        <%= form.submit "Entrar",
              class: "inline-flex w-full justify-center px-4 py-3 text-base font-semibold rounded-xl text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500 shadow-md transition" %>
      </div>
    <% end %>

    <div class="text-center mt-8">
      <p class="text-base text-gray-600">
        Não tem uma conta?
        <%= link_to "Cadastrar", new_user_path, class: "text-indigo-600 hover:text-indigo-800 font-semibold" %>
      </p>
    </div>
  </div>
</div>
