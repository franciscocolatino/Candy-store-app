<div class="max-w-2xl mx-auto px-4 py-12">
  <div class="max-w-md mx-auto bg-white p-8 shadow-xl rounded-xl">
    <h1 class="text-3xl font-bold text-center mb-8 text-gray-800">Login</h1>

    <% if flash[:alert] %>
      <div class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded-md mb-6">
        <%= flash[:alert] %>
      </div>
    <% end %>

    <%= form_with url: login_path, method: :post, data: { turbo: true }, class: "space-y-6" do |form| %>
      <div>
        <%= form.label :cpf, "CPF", class: "block text-base font-medium text-gray-800 mb-1" %>
        <%= form.text_field :cpf,
              required: true,
              autofocus: true,
              class: "block w-full px-4 py-3 rounded-xl border border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 text-base" %>
      </div>

      <div>
        <%= form.label :password_digest, "Senha", class: "block text-base font-medium text-gray-800 mb-1" %>
        <%= form.password_field :password_digest,
              required: true,
              class: "block w-full px-4 py-3 rounded-xl border border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 text-base" %>
      </div>

      <div class="flex justify-center pt-2">
        <%= form.submit "Entrar",
              class: "inline-flex justify-center px-6 py-3 text-base font-semibold rounded-xl text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500 shadow-md" %>
      </div>
    <% end %>

    <div class="text-center mt-8">
      <%= link_to "Cadastrar", new_user_path, class: "text-indigo-600 hover:text-indigo-800 font-medium text-base" %>
    </div>
  </div>
</div>
