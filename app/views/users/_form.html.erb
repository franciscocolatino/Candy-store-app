<%= form_with(model: user, local: true, html: { id: "user-form" }) do |form| %>
  <% if user.errors.any? %>
    <div class="bg-red-100 border border-red-400 text-red-700 px-6 py-4 rounded-md mb-6">
      <h4 class="text-lg font-semibold mb-2">
        <%= pluralize(user.errors.count, "erro") %> <%= user.errors.count > 1 ? "impediram o usuário de ser salvo:" : "impediu o usuário de ser salvo:" %>
      </h4>
      <ul class="list-disc list-inside space-y-1">
        <% user.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="min-h-screen flex items-center justify-center bg-gray-50 px-4 py-12">
  <div class="max-w-md w-full bg-white p-10 rounded-2xl shadow-2xl">
    <h1 class="text-4xl font-bold text-center mb-8 text-gray-900"><%= title %></h1>


    <div class="space-y-6">
      <div data-controller="users-cpf-validator">
        <%= form.label :cpf, "CPF", class: "block text-base font-medium text-gray-700 mb-1" %>
        <%= form.text_field :cpf,
              class: "block w-full px-4 py-3 rounded-xl border border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-2 focus:ring-indigo-500 focus:outline-none text-base transition",
              autofocus: true,
              required: true,
              placeholder: "Digite seu CPF (apenas números)",
              data: { users_cpf_validator_target: "input" } %>
        <p data-users-cpf-validator-target="error" class="mt-2 text-sm text-red-600 hidden flex items-center space-x-2">
          <svg class="w-4 h-4 text-red-500 flex-shrink-0" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" d="M12 9v2m0 4h.01M12 5a7 7 0 100 14 7 7 0 000-14z" />
          </svg>
          <span>CPF inválido. Verifique e tente novamente.</span>
        </p>
      </div>

      <!-- Campo Nome -->
      <div>
        <%= form.label :name, "Nome Completo", class: "block text-base font-medium text-gray-700 mb-1" %>
        <%= form.text_field :name,
              class: "block w-full px-4 py-3 rounded-xl border border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-2 focus:ring-indigo-500 focus:outline-none text-base transition",
              required: true,
              autofocus: true,
              placeholder: "Digite o nome completo" %>
      </div>

      <!-- Campo Senha -->
      <div>
        <%= form.label :password, "Senha", class: "block text-base font-medium text-gray-700 mb-1" %>
        <%= form.password_field :password,
              class: "block w-full px-4 py-3 rounded-xl border border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-2 focus:ring-indigo-500 focus:outline-none text-base transition",
              required: true,
              autofocus: true,
              placeholder: "Crie uma senha segura" %>
      </div>

      <!-- Botão de envio -->
      <div class="flex justify-center pt-4">
        <%= form.submit "Salvar", class: "inline-flex w-full justify-center px-4 py-3 text-base font-semibold rounded-xl text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500 shadow-md transition" %>
      </div>

      <% if title == "Cadastrar Usuário" %>

        <div class="text-center mt-8">
          <p class="text-base text-gray-600">
            Já possui uma conta?
            <%= link_to "Entrar", login_path, class: "text-indigo-600 hover:text-indigo-800 font-semibold" %>
          </p>
        </div>

      <% end %>

    </div>        
  </div>
<% end %>