<%= form_with(model: user, local: true, html: { id: "user-form" }) do |form| %>
  <% if user.errors.any? %>
    <div class="bg-red-100 border border-red-400 text-red-700 px-6 py-4 rounded-md mb-6">
      <h4 class="text-lg font-semibold mb-2">
        <%= pluralize(user.errors.count, "erro") %> <%= user.errors.count > 1 ? "impediram o usuário de ser salvo:" : "impediu o usuário de ser salvo:" %>
      </h4>
      <ul class="list-disc list-inside space-y-1">
        <% user.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="space-y-8">

    <!-- Campo CPF com validação Stimulus -->
    <div data-controller="users-cpf-validator">
      <%= form.label :cpf, "CPF", class: "block text-base font-medium text-gray-800 mb-1" %>
      <%= form.text_field :cpf,
            class: "mt-1 block w-full rounded-xl border border-gray-300 px-4 py-3 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 text-base",
            required: true,
            placeholder: "Apenas números",
            data: { users_cpf_validator_target: "input" } %>
      <p data-users-cpf-validator-target="error" class="mt-2 text-sm text-red-600 hidden flex items-center space-x-2">
        <svg class="w-4 h-4 text-red-500 flex-shrink-0" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" d="M12 9v2m0 4h.01M12 5a7 7 0 100 14 7 7 0 000-14z" />
        </svg>
        <span>CPF inválido. Verifique e tente novamente.</span>
      </p>
    </div>

    <!-- Campo Nome -->
    <div>
      <%= form.label :name, "Nome", class: "block text-base font-medium text-gray-800 mb-1" %>
      <%= form.text_field :name,
            class: "mt-1 block w-full rounded-xl border border-gray-300 px-4 py-3 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 text-base",
            required: true,
            placeholder: "Digite o nome completo" %>
    </div>

    <!-- Campo Senha -->
    <div>
      <%= form.label :password, "Senha", class: "block text-base font-medium text-gray-800 mb-1" %>
      <%= form.password_field :password,
            class: "mt-1 block w-full rounded-xl border border-gray-300 px-4 py-3 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 text-base",
            required: true,
            placeholder: "Crie uma senha segura" %>
    </div>

    <!-- Botão de envio -->
    <div class="flex justify-center pt-4">
      <%= form.submit "Salvar", class: "inline-flex justify-center px-6 py-3 border border-transparent text-base font-semibold rounded-xl text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500 shadow-md" %>
    </div>

  </div>
<% end %>
