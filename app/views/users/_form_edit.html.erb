
<div data-controller="update-password-modal">
  <%= form_with(model: user, local: true) do |form| %>
    <% if user.errors.any? %>
      <div class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded">
        <h4 class="font-bold mb-2"><%= pluralize(user.errors.count, "erro") %> impediram o usuário de ser salvo:</h4>
        <ul class="list-disc list-inside">
          <% user.errors.each do |error| %>
            <li><%= error.full_message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div class="space-y-6 mt-6">
      <div>
        <%= form.label :cpf, "CPF", class: "block text-sm font-medium text-gray-700" %>
        <%= form.text_field :cpf, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm", required: true, placeholder: "Apenas números" %>
      </div>

      <div>
        <%= form.label :name, "Nome", class: "block text-sm font-medium text-gray-700" %>
        <%= form.text_field :name, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm", required: true %>
      </div>

      <div class="flex justify-center space-x-4 pt-4">
        <%= form.submit "Salvar", class: "inline-flex justify-center py-2 px-4 border border-transparent shadow-sm text-sm font-medium rounded-md text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500" %>

        <button type="button"
                data-action="click->update-password-modal#open"
                class="inline-flex justify-center py-2 px-4 border border-gray-300 shadow-sm text-sm font-medium rounded-md text-gray-700 bg-white hover:bg-gray-100 focus:outline-none">
          Redefinir senha
        </button>
      </div>
    </div>
  <% end %>

  <!-- Modal de Redefinir Senha -->
  <div id="update-password-modal"
      data-update-password-modal-target="modal"
      data-action="keydown->update-password-modal#handleKeydown"
      class="fixed inset-0 z-50 hidden flex items-center justify-center bg-white bg-opacity-30 backdrop-blur-sm transition-opacity duration-300 ease-out">

    <div data-update-password-modal-target="box"
        class="opacity-0 scale-95 transform bg-white p-6 rounded-lg shadow-lg w-full max-w-md mx-4 transition-all duration-300 ease-out">
      <h2 class="text-lg font-semibold mb-4">Redefinir Senha</h2>

      <%= form_with(url: password_update_path(user), method: :patch, local: true,
              html: { data: {
                update_password_modal_target: "form",
                action: "submit->update-password-modal#validate"
              } }) do |f| %>

        <div>
          <%= f.label :password, "Nova senha", class: "block text-sm font-medium text-gray-700" %>
          <%= f.password_field :password, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm sm:text-sm", required: true %>
        </div>

        <div class="mt-4">
          <%= f.label :password_confirmation, "Confirmar senha", class: "block text-sm font-medium text-gray-700" %>
          <%= f.password_field :password_confirmation, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm sm:text-sm", required: true %>
        </div>

        <!-- Campo de erro -->
        <div data-update-password-modal-target="error"
            class="hidden text-red-600 text-sm mt-2 font-medium">
          <!-- erro é preenchido via Stimulus -->
        </div>

        <div class="mt-6 flex justify-end space-x-2">
          <button type="button"
                  data-action="update-password-modal#close"
                  class="py-2 px-4 bg-gray-200 text-gray-800 rounded hover:bg-gray-300">
            Cancelar
          </button>

          <%= f.submit "Atualizar Senha", class: "py-2 px-4 bg-indigo-600 text-white rounded hover:bg-indigo-700" %>
        </div>

      <% end %>
    </div>
  </div>

</div>
