

<div data-controller="users-update-password-modal">
  <%= form_with(model: user, local: true, html: { id: "user-form" }) do |form| %>
    <% if user.errors.any? %>
      <div class="bg-red-100 border border-red-400 text-red-700 px-6 py-4 rounded-md mb-6">
        <h4 class="text-lg font-semibold mb-2">
          <%= pluralize(user.errors.count, "erro") %> <%= user.errors.count > 1 ? "impediram o usuário de ser salvo:" : "impediu o usuário de ser salvo:" %>
        </h4>
        <ul class="list-disc list-inside space-y-1">
          <% user.errors.each do |error| %>
            <li><%= error.full_message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

  <div class="flex items-center justify-center px-2 py-2 m-16">
  <div class="max-w-md w-full bg-white p-10 rounded-2xl shadow-2xl">
    <h1 class="text-4xl font-bold text-center mb-8 text-gray-900">Editar Usuário</h1>
    <div class="max-w-md mx-auto">
      <% if notice || alert %>
        <div class="mb-6 rounded-md bg-green-100 border border-green-300 px-4 py-3 text-green-900 font-semibold shadow">
          <%= notice || alert %>
        </div>
      <% end %>
    </div>

    <div class="space-y-6">
      <div data-controller="users-cpf-validator">
        <%= form.label :cpf, "CPF", class: "block text-base font-medium text-gray-700 mb-1" %>
        <%= form.text_field :cpf,
              class: "block w-full px-4 py-3 rounded-xl border border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-2 focus:ring-indigo-500 focus:outline-none text-base transition",
              autofocus: true,
              required: true,
              placeholder: "Digite seu CPF (apenas números)",
              data: { users_cpf_validator_target: "input" } %>
        <p data-users-cpf-validator-target="error" class="mt-2 text-sm text-red-600 hidden flex items-center space-x-2">
          <svg class="w-4 h-4 text-red-500 flex-shrink-0" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" d="M12 9v2m0 4h.01M12 5a7 7 0 100 14 7 7 0 000-14z" />
          </svg>
          <span>CPF inválido. Verifique e tente novamente.</span>
        </p>
      </div>

      <!-- Campo Nome -->
      <div>
        <%= form.label :name, "Nome Completo", class: "block text-base font-medium text-gray-700 mb-1" %>
        <%= form.text_field :name,
              class: "block w-full px-4 py-3 rounded-xl border border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-2 focus:ring-indigo-500 focus:outline-none text-base transition",
              required: true,
              autofocus: true,
              placeholder: "Digite o nome completo" %>
      </div>

        <div class="mt-6 flex justify-end w-full gap-4">
        <%= form.submit "Salvar", class: "flex-1 px-5 py-2.5 border border-transparent text-base font-semibold rounded-xl text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500 shadow-md" %>

        <button type="button"
                data-action="click->users-update-password-modal#open"
                class="flex-1 px-5 py-2.5 border border-gray-300 text-base font-semibold rounded-xl text-gray-700 bg-white hover:bg-gray-100 focus:outline-none shadow-sm">
          Redefinir senha
        </button>
      </div>
    </div>
    </div>
    </div>
  <% end %>

  <!-- Modal de Redefinir Senha -->
  <div id="users-update-password-modal"
      data-users-update-password-modal-target="modal"
      data-action="keydown->users-update-password-modal#handleKeydown"
      class="fixed inset-0 z-50 hidden flex items-center justify-center bg-white bg-opacity-30 backdrop-blur-sm transition-opacity duration-300 ease-out">

    <div data-users-update-password-modal-target="box"
        class="opacity-0 scale-95 transform bg-white p-8 rounded-xl shadow-2xl w-full max-w-md mx-4 transition-all duration-300 ease-out">
      <h1 class="text-4xl font-bold text-center mb-8 text-gray-900">Redefinir Senha</h2>

      <%= form_with(url: password_update_path(user), method: :patch, local: true,
              html: { data: {
                users_update_password_modal_target: "form",
                action: "submit->users-update-password-modal#validate"
              } }) do |f| %>

        <div>
          <%= f.label :password, "Nova Senha", class: "block text-base font-medium text-gray-700 mb-1" %>
          <%= f.password_field :password,
              class: "block w-full px-4 py-3 rounded-xl border border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-2 focus:ring-indigo-500 focus:outline-none text-base transition",
              required: true,
              autofocus: true,
              placeholder: "Digite a sua nova senha" %>
        </div>

        <div class="mt-4">
          <%= f.label :password_confirmation, "Confirmar Senha", class: "block text-base font-medium text-gray-700 mb-1" %>
          <%= f.password_field :password_confirmation,
              class: "block w-full px-4 py-3 rounded-xl border border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-2 focus:ring-indigo-500 focus:outline-none text-base transition",
              required: true,
              autofocus: true,
              placeholder: "Digite a sua nova senha" %>
        </div>

        <!-- Campo de erro -->
        <div data-users-update-password-modal-target="error"
            class="hidden text-red-600 text-sm mt-3 font-medium">
          <!-- erro preenchido via Stimulus -->
        </div>

        <div class="mt-6 flex justify-end w-full gap-4">
          <button type="button"
                  data-action="users-update-password-modal#close"
                  class="flex-1 px-5 py-2.5 bg-gray-200 text-gray-800 rounded-xl font-medium hover:bg-gray-300">
            Cancelar
          </button>

          <%= f.submit "Atualizar Senha",
                class: "flex-1 px-5 py-2.5 bg-indigo-600 text-white rounded-xl font-medium hover:bg-indigo-700" %>
        </div>

      <% end %>
    </div>
  </div>
</div>
