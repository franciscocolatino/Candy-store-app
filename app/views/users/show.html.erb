<div class="max-w-2xl mx-auto px-4 py-8">
  <% if notice %>
    <div class="alert alert-success" role="alert">
      <%= notice %>
    </div>
  <% end %>

  <div class="max-w-md mx-auto">
    <h1 class="text-3xl font-bold mb-4"><%= @user.name %></h1>

    <p class="text-lg text-gray-700 mb-4"><strong>CPF:</strong> <%= @user.cpf %></p>

    <div class="flex gap-4">
      <%= link_to "Editar", edit_user_path(@user), class: "inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500" %>
      <%= link_to "Voltar", users_path, class: "inline-flex items-center px-4 py-2 border border-gray-300 text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500" %>
      <%= button_to "Destruir esse usuÃ¡rio", @user, method: :delete, class: "inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md text-white bg-red-600 hover:bg-red-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-red-500", data: { confirm: "Are you sure?" } %>
    </div>
  </div>
  
  <div class="card mb-3">
    <div class="card-body">
      <%= render @user %>
    </div>
  </div>
</div>
