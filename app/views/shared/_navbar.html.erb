<% if @current_user %>
  <nav class="bg-white shadow-md">
    <div class="max-w-7xl mx-auto px-6 py-4 flex justify-between items-center">

      <div class="text-3xl font-bold text-[#c2410c] tracking-wide hover:text-[#9a3412] transition">
        <%= link_to "Candy Shop", root_path %>
      </div>

      <div class="flex items-center space-x-6">
      
      <div class="hidden md:flex space-x-8 text-sm font-medium items-center">
        <%= link_to 'Mesas', tables_path, class: 'text-base text-[#9a3412] hover:text-[#c2410c] hover:scale-105 transition' %>  
        <%= link_to 'Balcão', delivery_path, class: 'text-base text-[#9a3412] hover:text-[#c2410c] hover:scale-105 transition' %>  
        <%= link_to 'Produtos', products_path, class: 'text-base text-[#9a3412] hover:text-[#c2410c] hover:scale-105 transition' %>
        <% if @current_user.is_admin %>
            <%= link_to 'Pedidos', orders_path, class: 'text-base text-[#9a3412] hover:text-[#c2410c] hover:scale-105 transition' %>
            <%= link_to 'Membros', users_path, class: 'text-base text-[#9a3412] hover:text-[#c2410c] hover:scale-105 transition' %>
            <%= link_to 'Dashboard', dashboard_path, class: 'text-base text-[#9a3412] hover:text-[#c2410c] hover:scale-105 transition' %>
          <% end %>
        </div>

        <div class="flex items-center space-x-4">

          <div data-controller="dropdown" class="relative">
            <button data-action="click->dropdown#toggle" class="flex items-center space-x-2 focus:outline-none">
              <img src="https://ui-avatars.com/api/?background=c2410c&color=fff&name=<%= @current_user.name %>" alt="Avatar" class="w-10 h-10 rounded-full border-2 border-gray-700">
            </button>
            <div data-dropdown-target="menu" class="hidden absolute right-0 mt-2 w-72 bg-white rounded-md shadow-xl z-50">
              <div class="flex items-center space-x-4 px-4 py-4 border-b border-gray-200">
                <img src="https://ui-avatars.com/api/?background=c2410c&color=fff&name=<%= @current_user.name %>" alt="Avatar" class="w-14 h-14 rounded-full border">
                <div>
                  <p class="text-base font-semibold text-gray-800"><%= @current_user.name %></p>
                  <p class="text-sm text-gray-500">  <%= @current_user.cpf.gsub(/(\d{3})(\d{3})(\d{3})(\d{2})/, '\1.\2.\3-\4') %></p>
                </div>
              </div>
              <div class="py-2">
                <%= link_to 'Minha Conta', @current_user, class: 'block px-4 py-2 text-base text-[#9a3412] hover:text-[#c2410c] transition hover:bg-gray-100' %>
                <%= link_to 'Sair', logout_path, method: :get, class: 'block px-4 py-2 text-base text-[#9a3412] hover:text-[#c2410c] transition hover:bg-gray-100' %>
              </div>
            </div>
          </div>
      </div>


        <div data-controller="dropdown" class="md:hidden">
          <button data-action="click->dropdown#toggle" class="text-[#c2410c] hover:text-[#9a3412]">
            <svg class="w-7 h-7" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" d="M4 6h16M4 12h16M4 18h16" />
            </svg>
          </button>
          <div data-dropdown-target="menu" class="hidden absolute right-4 top-14 bg-white rounded-md shadow-lg py-2 w-56 z-50">
            <%= link_to 'Mesas', tables_path, class: 'block px-4 py-2 text-base text-[#9a3412] hover:text-[#c2410c] transition hover:bg-gray-100' %>  
            <%= link_to 'Balcão', delivery_path, class: 'block px-4 py-2 text-base text-[#9a3412] hover:text-[#c2410c] transition hover:bg-gray-100' %>  
            <%= link_to 'Produtos', products_path, class: 'block px-4 py-2 text-base text-[#9a3412] hover:text-[#c2410c] transition hover:bg-gray-100' %>
            <% if @current_user.is_admin %>
              <%= link_to 'Pedidos', orders_path, class: 'block px-4 py-2 text-base text-[#9a3412] hover:text-[#c2410c] transition hover:bg-gray-100' %>
              <%= link_to 'Membros', users_path, class: 'block px-4 py-2 text-base text-[#9a3412] hover:text-[#c2410c] transition hover:bg-gray-100' %>
              <%= link_to 'Dashboard', dashboard_path, class: 'block px-4 py-2 text-base text-[#9a3412] hover:text-[#c2410c] transition hover:bg-gray-100' %>
            <% end %>
          </div>
        </div>

      </div>
    </div>
  </nav>
<% end %>
