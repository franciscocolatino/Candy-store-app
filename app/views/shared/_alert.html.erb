<% if notice.present? || alert.present? %>
  <div id="flash-message" class="max-w-4xl mx-auto mt-6">
    <div class="<%= notice.present? ? 'bg-green-100 border border-green-400 text-green-700' : 'bg-red-100 border border-red-400 text-red-700' %> px-6 py-4 rounded-md shadow">
      <p class="text-sm font-medium"><%= notice.presence || alert.presence %></p>
    </div>
  </div>
<% end %>

<script>
  document.addEventListener("DOMContentLoaded", () => {
    const flashMessage = document.getElementById("flash-message");
    if (flashMessage) {
      setTimeout(() => {
        flashMessage.classList.add('opacity-0', 'transition', 'duration-500');
        setTimeout(() => flashMessage.remove(), 500);
      }, 4000);
    }
  });
</script>
